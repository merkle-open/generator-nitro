{
  "name": "nitro",
  "private": true,
  "description": "Nitro monorepo",
  "repository": "namics/generator-nitro",
  "author": "The Nitro Team",
  "engines": {
    "node": ">=8 <11",
    "npm": ">=5.2 <7"
  },
  "scripts": {
    "clean": "npx npm-run-all clean:*",
    "clean:lerna": "lerna clean --yes",
    "clean:lock": "rimraf **/package-lock.json",
    "clean:modules": "npx rimraf node_modules",
    "commit": "git-cz",
    "postinstall": "lerna bootstrap --no-ci --hoist",
    "test": "lerna run test --parallel",
    "lint": "lerna run lint --parallel",
    "lint:md": "markdownlint ./readme.md ./.github",
    "update-dependencies": "lerna exec -- npx npm-check-updates -u -x globby,gulp,prettier"
  },
  "keywords": [
    "yeoman-generator",
    "scaffold",
    "frontend",
    "app",
    "nitro",
    "component",
    "pattern",
    "modular"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "commitizen": "3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "lerna": "3.8.1",
    "markdownlint-cli": "0.13.0",
    "rimraf": "2.6.3"
  }
}
