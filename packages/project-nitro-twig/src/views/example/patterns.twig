<div class="container">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			{% pattern name='gondel' %}
			{% pattern name='heading' tag='h1' %}
			{% pattern name='example' %}
			<div class="a-box">
				<h3>{% pattern name='icon' icon='nitro' %}&nbsp;Nitro example patterns</h3>
				{% pattern name='button' %}
				{% pattern name='checkbox' %}
			</div>
			{% pattern name='box' modifier='dark' %}
			{% pattern name='cta' %}
			<div class="a-box">
				{% pattern name='loader' %}
			</div>
			<!-- htmllint tag-bans="false" -->
			<style>
				.box {
					outline: 0.5vw solid lightcoral;
					margin: 0 auto;
					position: relative;
				}
			</style>
			<div class="box">{% pattern name='image' %}</div>
			{% pattern name='list' data='mix' %}

		</div>
	</div>
</div>
<div class="container-fluid">
	<div class="row">
	{% pattern name='stage' %}
	</div>
</div>
