<div class="t-ex{{#if modifier}} t-ex--{{modifier}}{{/if}}" data-g-name="Ex">
<h2 class="t-ex__headline">{{pattern name='ico' icon='nitro'}}{{title}}&nbsp;{{pattern name='ico' icon='flag-ch'}}</h2>
<ul class="js-t-ex__list">
	{{#each links}}
	{{pattern name='Ex-link' text=text}}
	{{/each}}
</ul>
{{#if buttons}}
<button class="t-ex__button js-t-ex__more">more links</button>
<button class="t-ex__button js-t-ex__add">add pattern</button>
{{/if}}
</div>

{{#if subpattern}}
{{pattern name='t' data=subpattern}}
{{!pattern 't' subpattern}}
{{/if}}
