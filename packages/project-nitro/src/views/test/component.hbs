<!-- htmllint tag-bans="false" -->
<style>
	h1 {
		font: italic small-caps bold 1.2rem Georgia;
		padding: 1rem 2rem 0;
	}
</style>
<!-- htmllint tag-bans="$previous" -->

<div class="container">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<h1>Pattern 'Ex'</h1>
			{{pattern 'Ex'}}
			{{component 'Ex' 'ex-blue'}}
			{{pattern 'Ex' 'ex-blue' name='NavMain' data='ex'}}

			<h1>'Ex' Variants</h1>
			{{pattern 'Ex' 'ex' data='ex-blue'}}
			{{pattern name='Ex' template='ex2'}}
			{{pattern name='Ex' data='ex-blue' template='ex'}}
			{{pattern name='Ex' data='ex' template='ex' type="test"}}
			{{pattern name='Ex' data='ex-blue' template='ex2'}}
			{{pattern name='Ex' data='ex' template='ex2'}}

			<h1>Element</h1>
			{{pattern name='subelement'}}

			<h1>Failures</h1>
			{{pattern 'Ex' 'ex-blue' name='Ex' data='ex' template='XXX'}}
			{{pattern 'Ex' template='other-ex'}}
			{{pattern name='Ex' type="atom"}}
			{{pattern name='Ex' data='not-available'}}
			{{pattern name='btn'}}

			<h1>Placeholder</h1>
			{{placeholder 'content' 'xample'}}
			{{placeholder 'content' template='xample'}}
			{{placeholder name='content' template='xample'}}
			{{#each accordion}}
				{{placeholder 'accordion' template}}
			{{/each}}
			{{#each accordion}}
				{{placeholder 'accordion' template=template}}
				{{placeholder name='accordion' template=template}}
			{{/each}}

			<h1>Data as attributes</h1>
			{{pattern 'tbutton'}}
			{{pattern name='tbutton' disabled=true text='special button'}}
			{{pattern name='tbox'}}
			{{pattern name='tbox' modifier='dark'}}

			<h1>Transclusion</h1>
			{{#pattern name='tbutton'}}My Text{{/pattern}}
			{{#component name='tbox'}}Mein <strong>Markup</strong>{{/component}}
			{{#pattern name='tbox'}}
				This tbox is filled with Text<br />
				{{#pattern name='tbutton'}}Send{{/pattern}}
				{{#pattern name='tbutton' disabled=true}}Reset{{/pattern}}
			{{/pattern}}

			<h1>Icons</h1>
			{{#pattern name='tbox'}}
				{{#pattern name='tbutton'}}Send {{pattern name='ico' icon='arrow-right'}}{{/pattern}}
				<p style="font-size: 5rem;">
					{{pattern name='ico' icon='arrow-right'}}
					{{pattern name='ico' icon='chevron-up'}}
					{{pattern name='ico' icon='flag-ch'}}
					{{pattern name='ico' icon='close'}}
					{{pattern name='ico' icon='exit-search'}}
					{{pattern name='ico' icon='expert-tool-user'}}
					{{pattern name='ico' icon='icon-info'}}
				</p>
			{{/pattern}}

			<h1>Special</h1>
			<h2>Reserved Words</h2>
			{{pattern name='foo' data='foo-bar'}}
			{{pattern name='map' data='map-map'}}
			{{pattern name='new' data='new-delete'}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			{{#pattern name="slick"}}
				<div>{{pattern name='image'}}</div>
				<div>{{pattern name='image'}}</div>
				<div><h2><a href="http://kenwheeler.github.io/slick/">slick</a>, the last carousel you'll ever need</h2></div>
				{{pattern name='image'}}
			{{/pattern}}
		</div>
	</div>
</div>
